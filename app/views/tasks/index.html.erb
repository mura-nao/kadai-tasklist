<% if logged_in? %>

 <p>ユーザー：<%= current_user.name %></p>

  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do|task| %>
      <li><%= link_to task.id, task %> : <%= task.content %> &gt; <%= task.status%></li>
    <% end %>
    
  </ul>

<%= link_to"新規タスクの入力", new_task_path %> 
<%= link_to 'ログアウト', logout_path, method: :delete %>

<% end %>